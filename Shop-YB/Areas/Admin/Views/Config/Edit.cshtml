@model Config
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var image = Model.Logo ?? "no-image.png";
}


<section class="content-header">
    <h1>
        Edit Configuration
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">

                <div class="box-header with-border">
                    <h3 class="box-title">Configuration</h3>
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="config" asp-action="edit" role="form" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <input type="hidden" asp-for="Id" />



                        <div class="form-group">
                            <label for="title"> Name</label>
                            <input type="text" class="form-control" required="required" id="title" asp-for="Name">
                        </div>

                        <div class="form-group">
                            <label for="photo"> Photo</label>
                            <input type="file" id="logo" name="logo" accept="image/*">
                            <br />
                            <img src="~/products/@image" width="120" />
                        </div>

                        <div class="form-group">
                            <label for="title"> Phone</label>
                            <input type="number" class="form-control" id="title" required="required" asp-for="Phone" min="0">
                        </div>

                        <div class="form-group">
                            <label for="title"> Mobile</label>
                            <input type="number" class="form-control" id="title" required="required" asp-for="Mobile" min="0">
                        </div>

                        <div class="form-group">
                            <label for="title"> Email</label>
                            <input type="email" class="form-control" id="title" required="required" asp-for="Email">
                        </div>


                        <div class="form-group">
                            <label for="title"> Address</label>
                            <input type="text" class="form-control" id="title" required="required" asp-for="Address">
                        </div>

                        <div class="form-group">
                            <label for="title"> Record Number (شماره ثبت)</label>
                            <input type="text" class="form-control" id="title" asp-for="RecordNumber">
                        </div>
                        <div class="form-group">
                            <label for="title"> Describe</label>
                            <textarea rows="10" class="form-control" id="describe" required="required" asp-for="Describe"></textarea>
                        </div>
                      

                        @*<div class="form-group">
            <label for="name"> Photo</label>
            <input type="file" name="photo" required="required" accept="image/*">
        </div>*@









                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>

<script src="https://cdn.tiny.cloud/1/0pmv348b2yliyt0zztszq9kn17hxlien2dutpry5mj03yxs9/tinymce/5/tinymce.min.js"></script>
<script>
     tinymce.init({
            selector: "#terms"
     });
      tinymce.init({
            selector: "#describe"
        });
</script>
