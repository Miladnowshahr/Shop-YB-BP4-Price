@model ShopYB.Models.Account;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <h1>
        Edit Customer
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Account Information</h3>
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="category" asp-action="edit" role="form" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name"> Username</label>
                            <input type="text" class="form-control" id="name" required="required" readonly="readonly" asp-for="Username">
                        </div>

                        <div class="form-group">
                            <label for="name"> Password</label>
                            <input type="password" class="form-control" id="password" name="password" required="required" asp-for="Password">
                        </div>

                        <div class="form-group">
                            <label for="name"> Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullname" required="required" asp-for="FullName">
                        </div>

                        <div class="form-group">
                            <label for="name"> Email</label>
                            <input type="email" class="form-control" id="email" name="email" required="required" asp-for="Email">
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status">Status
                            </label>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>
