
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <h1>
       Customer
    </h1>
</section>





<section class="content">

    @if (TempData["Error"] != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger">
                    <h4><i class="icon fa fa-ban">Failed</i></h4>
                    @TempData["Error"];
                </div>
            </div>
        </div>


    }


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Customer List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="customerListTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Username</th>
                                <th>Full Name</th>
                                <th>Email</th>

                                <th>Status</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var customer in (IEnumerable<ShopYB.Models.Account>)ViewBag.Customer)
                            {
                            <tr>
                                <td>@customer.Id</td>
                                <td>@customer.Username</td>
                                <td>@customer.FullName</td>
                                <td>@customer.Email</td>

                                <td>@(customer.Status ? "Active" : "Inactive")</td>

                                <td>
                                     <a asp-area="admin" asp-controller="customer" asp-action="edit"
                                         asp-route-id="@customer.Id"> Edit</a>

                                </td>


                            </tr>


                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>

                                <th>Photo</th>

                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
                <!-- /.box -->
            </div>
        </div>
    </div>

</section>

@section script{
    <script>
    $(function () {

        $('#customerListTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
    </script>



}