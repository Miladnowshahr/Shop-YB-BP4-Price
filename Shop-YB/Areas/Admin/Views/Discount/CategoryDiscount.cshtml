@model ProductCategoryDiscount
@{
    ViewData["Title"] = "CategoryDiscount";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <h1>
        Add New Category Discount
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Information</h3>0
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="discount" asp-action="CategoryDiscount" role="form" method="post">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="name"> Category</label>
                            <select  class="dropdown" name="Product_Category_Id" id="Product_Category_Id">
                                @foreach (var item in (IEnumerable<Category>)ViewBag.Category)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="name"> Coupon Code</label>
                            <input type="text" class="form-control" id="name" required="required" asp-for="Coupon_Code">
                        </div>
                        <div class="form-group">
                            <label for="name"> Discount Value</label>
                            <input type="number" class="form-control" id="name" required="required" asp-for="Discount_Value">
                        </div>
                        <div class="form-group">
                            <label for="name"> Discount Unit</label>
                            <input type="text" class="form-control" id="name" required="required" asp-for="Discount_Unit">
                        </div>
                        <div class="form-group">
                            <label for="name"> Valid From</label>
                            <input type="date" class="form-control" id="name" required="required" asp-for="Valid_From">
                        </div>
                        <div class="form-group">
                            <label for="name"> Valid Unitl</label>
                            <input type="date" class="form-control" id="name" required="required" asp-for="Valid_Until">
                        </div>

                        <div class="form-group">
                            <label for="name"> Min Order Value</label>
                            <input type="number" class="form-control" id="name" required="required" asp-for="Min_Order_Value">
                        </div>

                        <div class="form-group">
                            <label for="name"> Max Discount Amount</label>
                            <input type="number" class="form-control" id="name" required="required" asp-for="Max_Discount_Amount">
                        </div>


                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Is_Redeem_Allowed" /> Is Redeem Allowed
                            </label>
                        </div>





                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>
