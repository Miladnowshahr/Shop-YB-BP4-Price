@model ShopYB.Models.Photo
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Add Photo to @ViewBag.Product
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Photo Information</h3>
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="photo" asp-action="add" role="form" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="form-group">
                            <label for="name"> Photo</label>
                            <input type="file" name="photo" required="required" accept="image/*">
                        </div>



                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" />Status
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Featured" />Featured
                            </label>
                        </div>





                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>
