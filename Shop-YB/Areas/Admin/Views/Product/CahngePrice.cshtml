@model ShopYB.Areas.Admin.Models.ViewModels.PriceViewModel
@{
    ViewData["Title"] = "CahngePrice";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        تغییر قیمت
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">قیمت گذاری</h3>
                </div>
                <!-- /.box-header -->
               
                <!-- form start -->
                <form asp-area="admin" asp-controller="product" asp-action="changePrice" role="form" method="post" enctype="multipart/form-data">
                   @Html.HiddenFor(mode=>mode.ProductId)
                    <div class="box-body">

                        <div class="form-group">
                            <label for="title"> Name</label>
                            <input type="text" class="form-control" value="@Model.ProductName" readonly="readonly"  id="title" asp-for="ProductName">
                        </div>

                        <div class="form-group">
                            <label for="title"> Price</label>
                            <input type="number" class="form-control" id="title" readonly="readonly" value="@Model.BasePrice"  asp-for="BasePrice" min="0">
                        </div>

                        <div class="form-group">
                            <label for="title"> New Price</label>
                            <input type="number" class="form-control" id="title" required="required" asp-for="NewPrice" min="0">
                        </div>



                        <div class="form-group">
                            <label for="description"> Expiray Date </label>
                            <input type="date" class="form-control" rows="3" id="description" asp-for="ExpirayDate">
                        </div>


                        

                        

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="IsActive" />Is Active
                            </label>
                        </div>

                       







                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>