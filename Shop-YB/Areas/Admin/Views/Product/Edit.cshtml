@model ShopYB.Areas.Admin.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <h1>
        Edit Product
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">

                <div class="box-header with-border">
                    <h3 class="box-title">Product Information</h3>
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="product" asp-action="edit" role="form" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <input type="hidden" asp-for="Product.Id" />

                        <div class="form-group">
                            <label for="title"> Name</label>
                            <input type="text" class="form-control" required="required" id="title" asp-for="Product.Name">
                        </div>

                        <div class="form-group">
                            <label for="title"> Price</label>
                            <input type="number" class="form-control" id="title" required="required" asp-for="Product.Price" min="0">
                        </div>

                        <div class="form-group">
                            <label for="title"> Quantity</label>
                            <input type="number" class="form-control" id="title" required="required" asp-for="Product.Quantity" min="0">
                        </div>



                        <div class="form-group">
                            <label for="description"> Description</label>
                            <textarea class="form-control" rows="3" id="description" asp-for="Product.Description"></textarea>
                        </div>


                        <div class="form-group">
                            <label for="details"> Details</label>
                            <textarea class="form-control" rows="3" id="detail" asp-for="Product.Details"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="Category"> Category</label>

                            <select class="form-control" asp-for="Product.CategoryId" asp-items="@Model.Category">
                            </select>

                        </div>

                        @*<div class="form-group">
                                <label for="name"> Photo</label>
                                <input type="file" name="photo" required="required" accept="image/*">
                            </div>*@


                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Featured" />Featured
                            </label>
                        </div>


                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Status" />Status
                            </label>
                        </div>





                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>

<script src="https://cdn.tiny.cloud/1/0pmv348b2yliyt0zztszq9kn17hxlien2dutpry5mj03yxs9/tinymce/5/tinymce.min.js"></script>
<script>
     tinymce.init({
            selector: "#detail"
        });
</script>