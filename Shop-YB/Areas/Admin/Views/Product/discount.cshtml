@model ShopYB.Areas.Admin.Models.ViewModels.DiscountViewModel
@{
    ViewData["Title"] = "discount";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <h1>
       تخفیف
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">تخفیف</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-area="admin" asp-controller="product" asp-action="discount" role="form" method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(mode => mode.ProductId)
                    <div class="box-body">

                        <div class="form-group">
                            <label for="title"> Name</label>
                            <input type="text" class="form-control" value="@Model.ProductName" readonly="readonly"  asp-for="ProductName">
                        </div>


                        <div class="form-group">
                            <label for="title"> Price</label>
                            <input type="number" class="form-control"  readonly="readonly" value="@Model.Price" asp-for="Price" min="0">
                        </div>



                        <div class="form-group">
                            <label for="title"> Discount Value</label>
                            <input type="number" class="form-control" required="required" asp-for="DiscountValue" min="0">
                        </div>

                        <div class="form-group">
                            <label for="title"> New Price</label>
                            <input type="text" class="form-control" readonly="readonly" id="newPrice" >
                        </div>
                        <div class="form-group">
                            <label for="description"> From Date </label>
                            <input type="date" class="form-control" rows="3" asp-for="ValidFrom">
                        </div>


                        <div class="form-group">
                            <label for="description"> Expiray Date </label>
                            <input type="date" class="form-control" rows="3"  asp-for="ExpirayDate">
                        </div>






                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="IsActive" />Is Active
                            </label>
                        </div>









                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>