@model ShopYB.Models.SlideShow

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Add New SlideShow
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">SlideShow Information</h3>
                </div>
                <!-- /.box-header -->
                <span class="text-green">@ViewBag.msg</span>
                <!-- form start -->
                <form asp-area="admin" asp-controller="slideshow" asp-action="add" role="form" method="post" enctype="multipart/form-data">
                    <div class="box-body">


                        <div class="form-group">
                            <label for="name"> Photo</label>
                            <input type="file" name="photo" required="required" accept="image/*">
                        </div>

                        <div class="form-group">
                            <label for="title"> Title</label>
                            <input type="text" class="form-control" id="title" asp-for="Title">
                        </div>

                        <div class="form-group">
                            <label for="description"> Description</label>
                            <textarea class="form-control" rows="3" id="description"  asp-for="Description"></textarea>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" />Status
                            </label>
                        </div>





                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>


        </div>
    </div>

</section>