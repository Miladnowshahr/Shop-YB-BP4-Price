@model ContactUs
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<div>
    <form asp-controller="home" asp-action="contactus">
        <div class="box" style="min-height:500px">
            <div class="row">
                <div class="box-header">
                    <h2>تماس با ما</h2>
                </div>
            </div>
            <div class="container" style="margin-left:40px;margin-right:40px">
                @if (ViewBag.Message != null)
                {
                    <div class="text-success">@ViewBag.Message</div>
                }
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            <label class="label">نام و نام‌خانوادگی</label>
                        </div>

                        <div class="col-md-8" style="padding-left:40px;">

                            <input type="text" class="form-control" asp-for="FullName" placeholder="نام و نام‌خانوادگی" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-4">

                            <label class="label">ایمیل</label>
                        </div>
                        <div class="col-md-8" style="padding-left:45px;">

                            <input type="email" class="form-control" asp-for="Email" placeholder="ایمیل" />
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">

                        <label class="control-label">موضوع</label>
                    </div>
                    <div class="col-md-8" style="padding-left:50px;">

                        <input type="text" class="form-control" asp-for="Subject" placeholder="موضوع" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label">توضیحات</label>
                    </div>
                    <div class="col-md-8" style="padding-left:50px;">
                        <textarea cols="20" class="form-control" rows="8">توضیحات</textarea>
                    </div>
                </div>

            </div>
            <input style="margin-left: 190px;margin-top: 20px;margin-bottom: 20px;" class="btn btn-primary pull-left" type="submit" value="ارسال" />

        </div>

    </form>
</div>



